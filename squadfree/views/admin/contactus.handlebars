<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        ContactUS
        <small>Messages</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{{base_url}}}/admin"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">ContactUS</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">ContactUS Messages</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
				{{#if success_msg}}<div class="alert alert-success"><p>{{success_msg}}</p></div>{{/if}}
				<table id="example1" class="table table-bordered table-striped">
					<thead>
						<tr>
						  <th>Name</th>
						  <th>Email</th>
						  <th>Subject</th>
						  <th>Message</th>
						  <th>Action</th>
						</tr>
					</thead>
					<tbody>
						{{#each ContactUS}}
							<tr{{#ifCond status '==' 0}} class="text-bold"{{/ifCond}}>
								<td>{{ name }}</td>
								<td>{{ email }}</td>
								<td>{{ subject }}</td>
								<td>{{ message }}</td>
								<td>
									<a href="{{{base_url}}}/admin/viewMessage/{{_id}}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
									|
									<a href="javascript:void(0);" onclick="removeMsg('{{_id}}');"><i class="fa fa-trash" aria-hidden="true"></i></a>
								</td>
							</tr>
						{{/each}}
					</tbody>
				</table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
	<script>
		$(function () {
			$("#example1").DataTable({
				"paging": true,
				"lengthChange": false,
				"searching": true,
				"ordering": false,
				"info": true,
				"autoWidth": true,
				"pageLength": 20
			});
		});
		function removeMsg(O_id){
			if(!confirm("Are you sure want remove message!")){
				return false;
			}
			window.location.href = "/admin/removeMessage/"+O_id;
		}
	</script>
	<style>
		.text-bold{
			font-weight: bold;
		}
	</style>