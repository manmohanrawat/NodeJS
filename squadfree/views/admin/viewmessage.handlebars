<!-- Content Wrapper. Contains page content -->
	<div class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
		  <h1>
			Contact us Message
		  </h1>
		  <ol class="breadcrumb">
			<li><a href="{{{base_url}}}/admin"><i class="fa fa-dashboard"></i> Home</a></li>
			<li><a href="{{{base_url}}}/admin/contactus">Contact US</a></li>
			<li class="active">Messages</li>
		  </ol>
		</section>
		
		<!-- Main content -->
		<section class="content">
			<div class="row">
				<!-- left column -->
				<div class="col-md-12">
				  <!-- general form elements -->
				  <div class="box box-primary">
					<div class="box-header with-border">
					  <h3 class="box-title">Contact us Message</h3>
					</div>
					<!-- /.box-header -->
					<!-- form start -->
					<form role="form" method="post" action="{{base_url}}/admin/viewMessage/{{Message._id}}">
					  <div class="box-body">
						{{#if success_msg}}<div class="alert alert-success"><p>{{success_msg}}</p></div>{{/if}}
						<div class="form-group col-md-6">
							<label for="name">Name</label>
							<input type="text" class="form-control" id="name" name="name" placeholder="Enter Name" value="{{Message.name}}">
						</div>
						<div class="form-group col-md-6">
							<label for="email">Email</label>
							<input type="email" class="form-control" id="email" name="email" placeholder="Email" value="{{Message.email}}">
						</div>
						<div class="form-group col-md-12">
							<label for="subject">Subject</label>
							<input type="text" class="form-control" id="subject" name="subject" placeholder="Subject" value="{{Message.subject}}">
						</div>
						<div class="form-group col-md-12">
							<label for="message">Message</label>
							<textarea class="form-control" id="message" name="message" placeholder="Message" rows="5">{{Message.message}}</textarea>
						</div>
					  </div>
					  <!-- /.box-body -->

					  <div class="box-footer">
						<button type="submit" class="btn btn-primary">Submit</button>
					  </div>
					</form>
				  </div>
				  <!-- /.box -->
				</div> 
			</div>
		</section>	
	</div>
	